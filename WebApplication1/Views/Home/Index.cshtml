@{
    ViewData["Title"] = "Home Page";
    int cnt = 0;
}

<link href="~/css/homepage.css" rel="stylesheet" />
<link href="~/css/video.css" rel="stylesheet" />

<br />

<div class="container homepage_color">

    <!-- Start Video Section -->
    <div class="row">

        <table style="margin-left:auto; margin-right:auto;">
            <tr>
                <td><div id="back_bn"><img src="~/images/btn-back.png" height="30px" /></div></td>
                <td>

                    @foreach (System.Data.DataRow dr in ViewBag.dt.Rows)
                    {

                        string video_id = dr["videoLink"].ToString().Replace("https://www.youtube.com/watch?v=", "");
                        string strTitle = dr["title"].ToString();
                        string strPicID = "pic" + cnt.ToString();
                        string strVideoID = "video" + cnt.ToString();

                        <div class="col-sm-3" id="@strVideoID">

                            <input type="image" id="@strPicID" src="https://img.youtube.com/vi/@video_id/mqdefault.jpg" class="video-btn pic_video" data-src="@video_id" onClick="video_click(this.id)" />
                            @strTitle

                        </div>

                        cnt = cnt + 1;
                    }

                </td>
                <td><div id="next_bn"><img src="~/images/btn-next.png" height="30px" /></div></td>
            </tr>
        </table>

    </div>
    <!-- End Video Section -->

    <br />

    <!-- Start Stat Section -->
    <div class="row">

        <div class="col-sm-12">

            <p>Stats:</p>
            <p>Resize the browser window to call <code>resize</code> event.</p>
            <p>Window height: <span id="height"></span></p>
            <p>Window width: <span id="width"></span></p>
            <p>Current video: <span id="current">0</span></p>
            <p>Device type: <span id="device_type">DESKTOP</span></p>

        </div>

    </div>
    <!-- End Stat Section -->

    <!-- The Modal -->
    <div id="myModal" class="modal">

        <!-- Modal content -->
        <div class="modal-content center" id="modal_content" style="width:60%; height:auto">
            <span class="close" id="close_button">&times;</span>

            <!-- 16:9 aspect ratio -->
            <div class="embed-responsive embed-responsive-16by9">
                <iframe class="embed-responsive-item" src="" id="embed_video" allowscriptaccess="always" allow="autoplay" allowfullscreen="allowfullscreen"></iframe>
            </div>

        </div>

    </div>
</div>

<script src="~/js/video.js" type="text/javascript"></script>